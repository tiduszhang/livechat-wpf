<Window x:Class="Voip.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Voip"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="800" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--顶部导航-->
        <Grid Grid.Row="0" Background="#FFA137BA">
            <Ellipse   
                 HorizontalAlignment="Left"
                 Width="40"
                 Margin="10,5"
                 Height="40"  
                 VerticalAlignment="Top"               
                 StrokeThickness="2"
                 >
                <Ellipse.Fill>
                    <ImageBrush x:Name="avatarImg"/>
                </Ellipse.Fill>
            </Ellipse>
            <!--<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <Button>消息</Button>
            </StackPanel>-->
                
            
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <!--消息列表-->
            <Grid Background="#FFF2F2F2">
                <ListView x:Name="msgListView" SelectionChanged="msgListView_SelectionChanged" ItemsSource="{Binding}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <!--头像-->
                                <Grid>
                                    <Ellipse   
                                        HorizontalAlignment="Right"
                                        Width="40"
                                        Margin="10,5"
                                        Height="40"  
                                        VerticalAlignment="Top"               
                                        StrokeThickness="2"
                                        >
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding Path=Avatar}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>

                                <!--昵称和id-->
                                <Grid Grid.Column="1"  >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="4*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="{Binding Path=Nickname}"   />
                                    <TextBlock Grid.Row="2" VerticalAlignment="Top"   Text="{Binding Path=Message}" FontSize="10"/>
                                </Grid>

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Grid>
            <Frame x:Name="msgFrame"  Grid.Column="1"></Frame>
        </Grid>

    </Grid>
</Window>
